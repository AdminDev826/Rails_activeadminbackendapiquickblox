<div class="row wrapper border-bottom white-bg page-heading">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
            <%= form_for(@user,:html => {:class => 'form-horizontal'}) do |f| %>
              <div class="form-group"><label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <%= f.text_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-10">
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                  <%= f.text_area :description, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">Phone Number</label>
                <div class="col-sm-10">
                  <%= f.text_field :phone_number, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">UserName</label>
                <div class="col-sm-10">
                  <%= f.text_field :username, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>

              <div class="form-group"><label class="col-sm-2 control-label">Rating</label>
                <div class="col-sm-10">
                  <%= f.text_field :rating, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>
              <div class="form-group"><label class="col-sm-2 control-label">Role</label>
                <div class="col-sm-10">
                  <%= f.text_field :role, class: "form-control" %>
                </div>
              </div>
              <div class="hr-line-dashed"></div>
              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <%= f.submit class: "btn btn-primary" %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
    });

});

</script>

<% end %>


